            <Style TargetType="NavigationPage">
                <!--  Doesn't change anything!  -->
                <Setter Property="BarBackgroundColor" Value="Color.Red" />
                <Setter Property="BarTextColor" Value="#FFFFFF" />
                <Setter Property="NavigationPage.HasNavigationBar" Value="False" />

            </Style>


            <ControlTemplate x:Key="MainPageTemplate">
                <StackLayout>

                    <!--  Header Toolbar  -->
                    <StackLayout
                        Padding="10"
                        BackgroundColor="{StaticResource ToolbarColor}"
                        Orientation="Horizontal">

                        <Image
                            HeightRequest="30"
                            HorizontalOptions="Start"
                            Source="hamburger"
                            VerticalOptions="CenterAndExpand"
                            WidthRequest="30">

                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnHamburgerClick" />
                            </Image.GestureRecognizers>
                        </Image>

                        <Label
                            FontAttributes="Bold"
                            FontSize="18"
                            HorizontalOptions="CenterAndExpand"
                            Text="Dashboard"
                            TextColor="White"
                            VerticalOptions="CenterAndExpand" />

                        <Image
                            HeightRequest="30"
                            HorizontalOptions="End"
                            Source="bell"
                            VerticalOptions="CenterAndExpand"
                            WidthRequest="30">

                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding NotificationCommand}" />
                            </Image.GestureRecognizers>

                        </Image>

                    </StackLayout>

                    <!--  Our ContentPage  -->
                    <ContentPresenter />

                </StackLayout>
            </ControlTemplate>

